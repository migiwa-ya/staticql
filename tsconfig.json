{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["src", "cli", "tests"],
  "exclude": ["dist", "node_modules"]
}
